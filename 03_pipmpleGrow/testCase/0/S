FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -3 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    wall
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    bottom
    {
        type            noSlip;
    }
   
    wall
    {
        type            noSlip;
    }  
    
    stirrer
    {
        type            rotatingWallVelocity;
	origin		(0 0 0);
	axis 		(0 1 0); 
	omega		-12.566371;
    } 
   
    top
    {
        type            symmetry;
    } 
}
